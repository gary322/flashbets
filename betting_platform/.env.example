# Betting Platform Environment Configuration (Example)
#
# Copy to `.env` and edit for your environment.

# Solana RPC
RPC_URL=http://localhost:8899
PROGRAM_ID=HKTkR5ubMM2bpjdhEo3auZsF8QAqKg6MZR5iWTosGPca

# API Server
SERVER_HOST=127.0.0.1
SERVER_PORT=8081

# Database
DATABASE_URL=postgresql://betting_user:betting_pass@localhost:5432/betting_platform
DB_MAX_CONNECTIONS=50
DB_MIN_CONNECTIONS=5

# Cache (Redis)
CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Integrations
POLYMARKET_ENABLED=false
KALSHI_ENABLED=false
SYNC_INTERVAL_SECONDS=60

# Polymarket (authenticated CLOB orders; required for /api/orders/*)
# For demo: you can use dummy credentials with a local mock and set POLYMARKET_CLOB_BASE_URL.
POLYMARKET_API_KEY=demo-key
# POLYMARKET_API_SECRET must be base64-encoded (example here is base64("demo-secret")).
POLYMARKET_API_SECRET=ZGVtby1zZWNyZXQ=
POLYMARKET_API_PASSPHRASE=demo-passphrase
POLYMARKET_PRIVATE_KEY=
POLYMARKET_TESTNET=false
POLYMARKET_CLOB_BASE_URL=

# Security
JWT_SECRET=change-me-in-production-change-me-in-production
WALLET_VERIFICATION_ENABLED=true
RATE_LIMIT_ENABLED=true

# Development/Testing
ENABLE_AUTO_FUNDING=true
LOG_LEVEL=debug
